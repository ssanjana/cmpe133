<div class="product">
  <h2><%= link_to product.title, product, :class =>'btn' %></h2>
  <%= link_to image_tag(product.image_url, alt: product.title, height: 200, width: 300), product %>

  <div class="details">
    <%= number_to_currency(product.price) %>
    <% if product.category %>
      | Category: <%= product.category.name %>
    <% end %>
  </div>
  
</div>